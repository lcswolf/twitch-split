{
  "name": "twitch-split",
  "version": "1.0.0",
  "description": "Twitch Split",
  "main": "index.js",
  "repository": "https://github.com/strothj/twitch-split.git",
  "author": "strothj <jason@jasons.io>",
  "license": "MIT",
  "scripts": {
    "build": "node tools/build.js",
    "dev": "webpack-dev-server --config tools/webpack.config.dev.js",
    "lint": "eslint src/**/*.js src/**/*.jsx tools/**/*.js",
    "test": "mocha --opts tools/mocha.opts",
    "test:watch": "npm run test -- --watch"
  },
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "isomorphic-fetch": "^2.2.1",
    "normalize.css": "^5.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "3.0.0-beta.6",
    "react-router": "^3.0.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.22.0",
    "chai": "^3.5.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.1",
    "eslint": "3.13.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "3.0.2",
    "eslint-plugin-react": "6.9.0",
    "file-loader": "^0.10.0",
    "html-webpack-plugin": "^2.28.0",
    "ignore-styles": "^5.0.1",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "nock": "^9.0.4",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.2.2",
    "react-addons-test-utils": "^15.4.2",
    "sass-loader": "^4.1.1",
    "shelljs": "^0.7.6",
    "sinon": "^1.17.7",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0",
    "webpack-merge": "^2.6.1"
  },
  "babel": {
    "presets": [
      "latest",
      "stage-2",
      "react"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "browser": true,
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "mocha": true
    },
    "rules": {
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.spec.js"
          ]
        }
      ],
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".jsx",
            ".spec.js"
          ]
        }
      ],
      "no-unused-expressions": "off"
    },
    "extends": "airbnb"
  }
}
